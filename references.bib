	keywords = {Adult, Humans, Female, Male, Platelet Count, Aged, Middle Aged, Retrospective Studies, Kidney Function Tests, Aged, 80 and over, Young Adult, therapeutic drug monitoring, linezolid, Anti-Bacterial Agents/*adverse effects/blood, China, Drug Monitoring, haematological toxicity, Hematologic Diseases/*chemically induced, Linezolid/*adverse effects/blood, Liver Function Tests, Thrombocytopenia/chemically induced},
	pages = {807--813},
