@article{xu_establishment_2023,
	title = {Establishment and validation of a risk prediction model incorporating concentrations of linezolid and its metabolite {PNU142300} for linezolid-induced thrombocytopenia},
	volume = {78},
	issn = {1460-2091},
	doi = {10.1093/jac/dkad191},
	abstract = {BACKGROUND: Linezolid-induced thrombocytopenia is the main factor restricting the clinical application of linezolid.
OBJECTIVES: To investigate the relationship between PNU-14230 concentration and linezolid-induced thrombocytopenia and further develop and validate a risk model for predicting linezolid-induced thrombocytopenia.
